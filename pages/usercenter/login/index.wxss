page {
  height: 100%;
}
.login-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.login-content {
  width: calc(100% - 100rpx);
  padding: 0 50rpx;
  height: 820rpx;
}
.login-content .logo {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  display: block;
}
.tips-title {
  font-size: 30rpx;
  margin-bottom: 15rpx;
  margin-top: 30rpx;
}
.tips-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}
.login-btn {
  margin: 20rpx;
  color: #fff;
  padding: 20rpx 0;
  border-radius: 4rpx;
  text-align: center;
  background-color: rgb(127, 189, 111);
}
.t-inline {
  display: inline;
  color: #333;
  font-size: 26rpx !important;
}
.login-content .t-radio--block {
  padding: 0 !important;
  background-color: transparent !important;
}
.t-tips-content {
  font-size: 22rpx !important;
  color: #999;
}
.login-content .t-radio__icon {
  font-size: 32rpx !important;
  margin-right: 5px !important;
  width: var(--td-radio-icon-size, 32rpx) !important;
  height: var(--td-radio-icon-size, 32rpx) !important;
  margin-top: 12rpx;
}
.login-content .t-radio__border {
  display: none;
}
.login-footer {
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  left: 0;
}
.footer-content {
  width: 450rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #999;
  margin: 0 auto;
  font-size: 24rpx;
  text-align: center;
}
.footer-content .img {
  width: 110rpx;
  height: 110rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 15rpx;
}

.t-dialog .t-tips-content {
  color: #999;
  font-size: 26rpx !important;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  line-height: 1.5;
}
.t-tips-content .point {
  color: rgb(90, 115, 230);
  font-size: 28rpx;
  margin-top: 40rpx;
  margin-bottom: -10rpx;
  text-align: left;
}

page {
  background-color: #f5f5f5 !important;
}
.account-content-wrap {
  padding: 30rpx;
}
.account-content-wrap .tips {
  color: #ef8147 !important;
  background-color: #fdf6e9 !important;
  padding: 20rpx 25rpx !important;
  margin: 0 0 12rpx;
  font-size: 28rpx;
  font-weight: normal;
}
.t-empty__image {
  width: 360rpx;
  height: 240rpx;
}
.account-empty-content {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  margin-top: -140rpx;
}
.account-empty-content .t-empty__description {
  margin-top: 0 !important;
  color: #333 !important;
  font-size: 30rpx !important;
}
.account-add-content {
  position: fixed;
  width: calc(100% - 60rpx);
  color: #333;
  bottom: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 28rpx;
}
.account-add-content .douyin {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.account-info-content {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 20rpx 80rpx;
}
.account-info-content .info {
  display: flex;
  align-items: center;
}
.account-info-content .avator {
  width: 88rpx;
  height: 88rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}
.account-info-content .login {
  font-size: 24rpx;
  color: #333;
}
.account-info-content .nickname {
  font-size: 30rpx;
}
.account-info-content .time {
  font-size: 22rpx;
  color: #666;
  margin-top: 10rpx;
}
.account-info-data {
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.account-info-data .text-content {
  margin: 50rpx 0 40rpx;
}
.account-info-data .text-content .text:last-child {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}
.refresh {
  float: right;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border: 2rpx solid #f2f2f2;
  color: #333;
}

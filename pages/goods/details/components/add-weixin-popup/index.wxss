.scan__popup__content {
  background-color: transparent !important;
}
.block {
  position: relative;
  width: 640rpx;
  height: 880rpx;
  background-color: transparent;
  border-radius: 20rpx;
  overflow: hidden;
}
.douyin {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  border-radius: 20rpx;
}
.qr__container {
  width: 340rpx;
  height: 340rpx;
  margin: 0 auto 30rpx;
  display: block;
  border: 20rpx solid #fff;
  border-radius: 20rpx;
}
.refrsh__button {
  position: absolute !important;
  bottom: 60rpx !important;
  width: 80% !important;
  left: 10% !important;
  height: 100rpx !important;
  line-height: 100rpx !important;
  color: #5b72f4 !important;
  background-color: #f2f2f2 !important;
  border-color: #f2f2f2 !important;
  --td-button-default-border-color: #f5f5f5 !important;
  font-size: 36rpx !important;
  font-weight: normal !important;
  text-align: center;
  border-radius: 8rpx;
}
.main__title {
  color: #fff;
  text-align: center;
  padding: 70rpx 0 50rpx;
  font-size: 36rpx;
}
.sub__title {
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.scan__popup__content .tips {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

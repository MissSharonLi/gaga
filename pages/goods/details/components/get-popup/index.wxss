.block {
  width: 100vw;
  height: 320px;
  background: #fff;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
}
.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 30rpx;
  color: #333;
}
.popu__text__content {
  font-size: 24rpx;
  color: #666;
  padding: 0 50rpx 40rpx;
}
.popu__text__content .text {
  margin-bottom: 20rpx;
  text-align: justify;
}
.popu__text__content .text-tips {
  color: #999;
  text-align: justify;
}
.popu__text__content .tips-last {
  margin-top: 20rpx;
}
.t-submit {
  background-color: rgb(96, 110, 249);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  width: 90%;
  margin: 0 auto;
  border-radius: 4rpx;
}

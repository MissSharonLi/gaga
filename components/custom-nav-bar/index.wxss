page {
  background-color: #f5f5f5 !important;
}
.custom-capsule,
.custom-transparent {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.custom-transparent {
  color: #fff;
}
.custom-capsule__icon,
.custom-transparent__icon {
  flex: 1;
  position: relative;
}

.custom-capsule__icon + .custom-capsule__icon:before,
.custom-transparent__icon + .custom-transparent__icon::before {
  content: '';
  display: block;
  position: absolute;
  left: -1px;
  top: 50%;
  transform: translateY(-50%);
  width: 1px;
  height: 36rpx;
  background: #e7e7e7;
}
.custom-transparent__icon + .custom-transparent__icon::before {
  background: #000 !important;
}
